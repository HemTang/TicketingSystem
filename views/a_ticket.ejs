<%- include("layout") %>

<div class="container-fluid">
  <div class="row" style="height: 100vh">
    <!-- Sidebar Column (30%) -->
    <div class="col-2 bg-dark text-white p-0" id="sidebar">
      <%- include('partials/header') %>
    </div>
    <!-- Main Content Column (70%) -->
    <div class="col-10" id="main-content">
      <main class="container">
        <H1>Welcome: <%=user.name %></H1>
        <div class="container" style="height: 100vh">
          <%for(let a_ticket of a_tickets){%>
          <div class="card shadow-lg mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="card-title mb-0">
                #<%= a_ticket.id %> - <%= a_ticket.title %>
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text"><%= a_ticket.description %></p>
              <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item border-bottom-0">
                  <strong>Priority:</strong>
                  <span class="badge bg-danger"><%= a_ticket.priority %></span>
                </li>
                <li class="list-group-item border-bottom-0">
                  <strong>Category:</strong> <%= a_ticket.category %>
                </li>
                <li class="list-group-item border-bottom-0">
                  <strong>Assigned To:</strong> <%= a_ticket.assignedto %>
                </li>
                <li class="list-group-item">
                  <strong>Incident For:</strong> <%= a_ticket.incidentfor %>
                </li>
              </ul>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a
                    href="/update/<%= a_ticket.id %>"
                    class="btn btn-sm btn-outline-primary"
                    >Update</a
                  >
                  <a
                    href="/view/<%= a_ticket.id %>"
                    class="btn btn-sm btn-outline-secondary"
                    >View More</a
                  >
                </div>
                <% if(user.role==="IT Support"){ %>
                <a href="/delete/<%=a_ticket.id  %>"
                  ><button class="btn btn-sm btn-outline-danger">
                    Delete
                  </button></a
                >
                <% } %>
              </div>
            </div>
          </div>

          <%} %>

          <!-- Repeat the above card structure for additional tickets -->
        </div>
      </main>
    </div>
  </div>
</div>
