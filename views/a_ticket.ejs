<%- include("layout") %>

<div class="container-fluid">
  <div class="row" style="height: 100vh">
    <!-- Sidebar Column (30%) -->
    <div class="col-2 bg-dark text-white p-0" id="sidebar">
      <%- include('partials/header') %>
    </div>
    <!-- Main Content Column (70%) -->
    <div class="col-10" id="main-content">
      <main class="container">
        <H1>Welcome: <%=user.name %></H1>
        <div class="container" style="height: 100vh">
          <%for(let a_ticket of a_tickets){%>

          <div
            class="card shadow-sm mb-4 border-0"
            style="border-top: 3px solid #0d6efd"
          >
            <div
              class="card-header d-flex justify-content-between align-items-center bg-light text-dark"
            >
              <h5 class="card-title mb-0">
                <span class="text-primary">#<%= a_ticket.id %></span> - <%=
                a_ticket.title %>
              </h5>
              <span class="badge badge-info text-dark"
                ><%= a_ticket.priority %></span
              >
            </div>
            <div class="card-body">
              <p class="card-text text-muted"><%= a_ticket.description %></p>
              <div class="row mb-3">
                <div class="col-md-4">
                  <strong>Category:</strong> <%= a_ticket.category %>
                </div>
                <div class="col-md-4">
                  <strong>Assigned To:</strong> <%= a_ticket.assignedto %>
                </div>
                <div class="col-md-4">
                  <strong>Incident For:</strong> <%= a_ticket.incidentfor %>
                </div>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a
                    href="/update/<%= a_ticket.id %>"
                    class="btn btn-outline-primary btn-sm"
                    >Update</a
                  >
                  <a
                    href="/view/<%= a_ticket.id %>"
                    class="btn btn-outline-secondary btn-sm"
                    >View More</a
                  >
                </div>
                <% if (user.role === "IT Support") { %>
                <a
                  href="/delete/<%= a_ticket.id %>"
                  class="btn btn-outline-danger btn-sm"
                  >Delete</a
                >
                <% } %>
              </div>
            </div>
          </div>

          <%} %>

          <!-- Repeat the above card structure for additional tickets -->
        </div>
      </main>
    </div>
  </div>
</div>
