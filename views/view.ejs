<%- include("layout") %>

<div class="container-fluid">
  <div class="row" style="height: 100vh">
    <!-- Sidebar Column (30%) -->
    <div class="col-2 bg-dark text-white p-0" id="sidebar">
      <%- include('partials/header') %>
    </div>
    <!-- Main Content Column (70%) -->
    <div class="col-10" id="main-content">
      <main class="container">
        <H1>View Ticket</H1>
        <div class="container mt-5">
          <div class="card shadow-lg">
            <div
              class="card-header bg-primary text-white d-flex justify-content-between align-items-center"
            >
              <h2 class="mb-0">
                Ticket #<%= ticket.id %> - <%= ticket.title %>
              </h2>
              <span class="badge bg-light text-dark"
                ><%= ticket.category %></span
              >
            </div>
            <div class="card-body">
              <p class="card-text"><%= ticket.description %></p>
              <ul class="list-group list-group-flush mb-3">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <strong>Priority:</strong>
                  <span class="badge bg-danger"><%= ticket.priority %></span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <strong>Requested By:</strong>
                  <span><%= ticket.assignedto %></span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <strong>Incident For:</strong>
                  <span><%= ticket.incidentfor %></span>
                </li>
              </ul>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a
                    href="/update/<%= ticket.id %>"
                    class="btn btn-sm btn-outline-primary"
                    >Update</a
                  >
                  <a
                    href="/view/<%= ticket.id%>"
                    class="btn btn-sm btn-outline-secondary"
                    >View More</a
                  >
                </div>

                <% if(user.role==="IT Support"){ %>
                <button class="btn btn-sm btn-outline-danger">
                  Close Ticket
                </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- activity on ticket -->

        <% if(user.role==="IT Support"){ %>
        <div class="container mt-5">
          <div
            class="card shadow-lg"
            style="
              border-radius: 15px;
              background: rgba(255, 255, 255, 0.8);
              backdrop-filter: blur(10px);
            "
          >
            <div
              class="card-header bg-info text-white"
              style="border-radius: 15px 15px 0 0"
            >
              <h3 class="mb-0">Add Comment</h3>
            </div>
            <div class="card-body">
              <form action="/comment/<%= ticket.id %>" method="POST">
                <div class="mb-3">
                  <label for="comment" class="form-label">Your Comment</label>
                  <textarea
                    class="form-control"
                    id="comment"
                    name="comment"
                    rows="4"
                    placeholder="Write your comment here..."
                    required
                    style="border-radius: 10px"
                  ></textarea>
                </div>
                <div class="text-end">
                  <button
                    type="submit"
                    class="btn btn-success"
                    style="border-radius: 10px"
                  >
                    Post Comment
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <% } %>

        <!-- show activity for the ticket -->
        <div class="container mt-5">
          <h3>Comments</h3>
          <% for(let activity of activities) { %>
          <div class="card mb-3 shadow-sm border-0">
            <div class="card-body">
              <div
                class="d-flex justify-content-between align-items-center mb-3"
              >
                <div>
                  <h5 class="card-title mb-0">John Doe</h5>
                  <h6 class="card-subtitle text-muted">Posted on</h6>
                </div>
                <% if(user.role==="IT Support"){ %>
                <div class="btn-group">
                  <form
                    action="/delete_comment/<%=activity.id%>/ticket/<%=ticket.id%>?_method=DELETE"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                      Delete
                    </button>
                  </form>
                </div>
                <% } %>
              </div>
              <p class="card-text"><%= activity.activity %></p>
            </div>
          </div>
          <% } %>
        </div>
      </main>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
  crossorigin="anonymous"
></script>
